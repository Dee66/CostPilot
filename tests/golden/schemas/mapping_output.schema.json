{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CostPilot Mapping Output Schema",
  "description": "Canonical schema for dependency mapping JSON output",
  "type": "object",
  "required": ["nodes", "edges", "metadata"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GraphNode"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GraphEdge"
      }
    },
    "metadata": {
      "type": "object",
      "required": ["version", "timestamp", "node_count", "edge_count"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "node_count": {
          "type": "integer",
          "minimum": 0
        },
        "edge_count": {
          "type": "integer",
          "minimum": 0
        },
        "has_cycles": {
          "type": "boolean"
        }
      }
    }
  },
  "definitions": {
    "GraphNode": {
      "type": "object",
      "required": ["id", "resource_type", "resource_id"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "resource_type": {
          "type": "string",
          "minLength": 1
        },
        "resource_id": {
          "type": "string",
          "minLength": 1
        },
        "monthly_cost": {
          "type": "number",
          "minimum": 0
        },
        "module_path": {
          "type": "string"
        }
      }
    },
    "GraphEdge": {
      "type": "object",
      "required": ["from", "to", "edge_type"],
      "properties": {
        "from": {
          "type": "string",
          "minLength": 1
        },
        "to": {
          "type": "string",
          "minLength": 1
        },
        "edge_type": {
          "type": "string",
          "enum": ["depends_on", "references", "contains"]
        },
        "cost_impact": {
          "type": "number"
        }
      }
    }
  }
}
